.game-wrap .record {
  width: 100%;
}
.game-wrap .record .title {
  position: relative;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #776e65;
}
.game-wrap .record .title::before, .record .title::after {
  content: '';
  display: block;
  position: absolute;
  top: 28rpx;
  width: 100rpx;
  height: 4rpx;
  background: #776e65;
}
.game-wrap .record .title::before {
  left: 150rpx;
}
.game-wrap .record .title::after {
