/*带色背景颜色: #bbada0*/
@keyframes fade-in-out
{
  0% {
    opacity: 0;
    transform: rotateY(-90deg);
  }
  20% {
    opacity: 1;
    transform: rotateY(0deg);
  }
  80% {
    opacity: 1;
    transform: rotateY(0deg);
  }
  100% {
    opacity: 0;
    transform: rotateY(-90deg);
  }
}
.container {
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding-top: 0.1px;
}
/*计算器*/
.calculator-wrap {
  width: 100%;
  height: 100%;
  padding-top: 0.1px;
  background: #e0e0e0;
}
.calculator-wrap .bold {
  font-weight: bold;
}
.calculator-wrap .main {
  margin: 100rpx auto 0;
  width: 650rpx;
  height: 1000rpx;
  padding-top: 0.1px;
  box-shadow: 0 0 30rpx #c5c5c5;
  border-radius: 60rpx;
  background: #c5c5c5;
}
.calculator-wrap .title {
  margin: 20rpx auto 0;
  width: 530rpx;
  height: 130rpx;
  color: #777;
  line-height: 130rpx;
}
.calculator-wrap .screen {
  box-sizing: border-box;
  margin: 0 auto;
  width: 530rpx;
  height: 160rpx;
  padding: 0 10rpx;
  border: 4rpx solid #fff;
  border-radius: 20rpx;
  background: #cce5ff;
 }
.calculator-wrap .screen .line {
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: 56rpx;
}
.calculator-wrap .screen .line2 {
  width: 100%;
  overflow-x: hidden;
}
.calculator-wrap .screen .line2 .hide {
  opacity: 0;
}
.calculator-wrap .screen .line2 .content {
  float: right;
  color: #746760;
  font-size: 50rpx;
  letter-spacing: 4rpx;
  white-space: nowrap;
}
.calculator-wrap .btns {
  margin: 80rpx 0 0 60rpx;
  /*稍大点，兼容不同屏幕*/
  width: 562rpx;
}
.calculator-wrap .btns .btn-item {
  float: left;
  margin: 0 30rpx 40rpx 0;
  width: 110rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background: #000;
  border-radius: 16rpx;
}
.calculator-wrap .btns .big-item {
  width: 240rpx;
}
.calculator-wrap .btns .red {
  background: #fc0a0a;
}
.calculator-wrap .btns .line4 .left {
  /*420 --> 421*/
  float: left;
  width: 421rpx;
}
.calculator-wrap .btns .line4 .right {
  /*110 --> 109*/
  float: right;
  width: 109rpx;
  height: 180rpx;
  line-height: 180rpx;
}










/*游戏*/
.game-wrap .head {
  display: flex;
  margin: 40rpx auto 0;
  width: 100%;
  height: 130rpx;
  justify-content: space-around;
}
.game-wrap .head .head-item {
  width: 230rpx;
  height: 130rpx;
}
.game-wrap .head .name {
  line-height: 130rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight: bolder;
  color: #776e65;
}
.game-wrap .head .name .animation-wrap {
  animation: fade-in-out 2s linear forwards;
}
.game-wrap .head .name image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50% 50%;
  vertical-align: middle;
}
.game-wrap .head .name .user {
