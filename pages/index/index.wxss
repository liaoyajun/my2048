@keyframes fade-in-out
{
  0% {
    opacity: 0;
    transform: rotateY(-90deg);
  }
  20% {
    opacity: 1;
    transform: rotateY(0deg);
  }
  80% {
    opacity: 1;
    transform: rotateY(0deg);
  }
  100% {
    opacity: 0;
    transform: rotateY(-90deg);
  }
}
.container {
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding-top: 0.1px;
}
.head {
  display: flex;
  margin: 40rpx auto 0;
  width: 100%;
  height: 130rpx;
  justify-content: space-around;
}
.head .head-item {
  width: 230rpx;
  height: 130rpx;
}
.head .name {
  line-height: 130rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight: bolder;
  color: #776e65;
}
.head .name .animation-wrap {
  animation: fade-in-out 2s linear forwards;
}
.head .name image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50% 50%;
  vertical-align: middle;
}
.head .name .user {
  font-size: 40rpx;
}
.head .name .author {
  font-size: 24rpx;
}
.head .score {
  border-radius: 12rpx;
  background: #bbada0;
}
.head .score .head-item-title {
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #efe2d6;
}
.head .score .num {
  line-height: 40rpx;
  text-align: center;
  font-size: 40rpx;
  color: #ffffff;
}
