.record {
  width: 100%;
}
.record .title {
  position: relative;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #776e65;
}
.record .title::before, .record .title::after {
  content: '';
  display: block;
  position: absolute;
  top: 28rpx;
  width: 100rpx;
  height: 4rpx;
  background: #776e65;
}
.record .title::before {
  left: 150rpx;
}
.record .title::after {
  right: 150rpx;
}
.record .record-wrap {
  display: block;
  margin: 20rpx auto 0;
  width: 100%;
  height: 160rpx;
}
.record .record-wrap image {
  display: block;
  margin: auto;
  width: 260rpx;
  height: 160rpx;
}
.record .record-wrap .record-item {
  text-indent: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #776e65;
}
.record .record-wrap .record-item text {
  font-size: 32rpx;
  font-weight: bold;
}











